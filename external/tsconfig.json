{
  "compilerOptions": {
      "module": "esnext",
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": true,
      "declaration": true,
      "rootDir": "src",
      "noEmitOnError": true,
      "jsx": "react",
      "forceConsistentCasingInFileNames": true,
      "lib": [
          "es5",
          "dom",
          "es2015.collection",
          "es2017",
          "es2015"
      ]
  },
  "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@microsoft"
  ],
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
  ]
}